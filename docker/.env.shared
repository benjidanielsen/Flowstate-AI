# Shared Environment Variables for Flowstate-AI
# This file contains environment variables common to all environments
# Environment-specific overrides should be in .env.staging or .env.production

# Application
NODE_ENV=production
LOG_LEVEL=info

# Database (override in environment-specific files)
DATABASE_URL=postgresql://flowstate:password@db:5432/flowstate_db

# API Configuration
API_PORT=3000
PYTHON_WORKER_URL=http://python-worker:8000

# GODMODE Dashboard
GODMODE_PORT=5000

# OpenTelemetry (OTEL)
OTEL_ENABLED=false
OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector:4318

# Security
# IMPORTANT: Override these in environment-specific files with actual secrets
JWT_SECRET=change_me_in_production
SESSION_SECRET=change_me_in_production

# Feature Flags
ENABLE_SELF_EVOLUTION=false
ENABLE_FEDERATION=false

# Cost Controls
MAX_MONTHLY_COST_NOK=200

