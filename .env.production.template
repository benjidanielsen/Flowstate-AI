# Flowstate-AI Production Environment Configuration
# Copy this file to .env.production and fill in the values

# Application
NODE_ENV=production
APP_NAME=Flowstate-AI
APP_VERSION=1.0.0

# Database Configuration
DATABASE_URL=postgresql://flowstate:CHANGE_ME_STRONG_PASSWORD@postgres:5432/flowstate_ai
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_SSL=false

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=
REDIS_DB=0

# Backend API
BACKEND_PORT=3001
BACKEND_HOST=0.0.0.0
JWT_SECRET=CHANGE_ME_RANDOM_SECRET_MIN_32_CHARS
JWT_EXPIRY=7d
SESSION_SECRET=CHANGE_ME_ANOTHER_RANDOM_SECRET

# Frontend
FRONTEND_PORT=3000
VITE_API_URL=http://localhost:3001

# Python Worker
PYTHON_WORKER_PORT=8000
PYTHONUNBUFFERED=1
OPENAI_API_KEY=

# AI Configuration
AI_MODEL=gpt-4
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=2000

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Security
CORS_ORIGIN=http://localhost:3000,https://yourdomain.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Email (Optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@flowstate.ai

# External Integrations (Optional)
SLACK_WEBHOOK_URL=
DISCORD_WEBHOOK_URL=

