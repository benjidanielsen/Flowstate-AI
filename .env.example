# Core service configuration
NODE_ENV=development
PORT=3001
DATABASE_URL=./data/flowstate.db
DATABASE_TYPE=sqlite
JWT_SECRET=change-me
PYTHON_WORKER_URL=http://python-worker:8000
WORKER_PORT=8000
FRONTEND_PORT=3000

# GODMODE dashboard
GODMODE_ADMIN_USERNAME=admin
GODMODE_ADMIN_PASSWORD=change-me

# Automation / orchestration
LLM_PROVIDER=ollama
LLM_MODEL=llama3.1:8b
OLLAMA_HOST=http://host.docker.internal:11434
EMBED_MODEL=nomic-embed-text
MEMORY_URL=http://memory:8080
SWEAGENT_URL=http://sweagent:8086
ORCH_PORT=8088
AUTOMERGE=false
AUTOMERGE_SCORE_THRESHOLD=0.78
DEFAULT_BRANCH=main
TEST_COMMAND=python -m pytest || npm test || echo "no tests"
PAUSE_FILE=/workspace/ops/PAUSE

# GitHub (optional)
GITHUB_TOKEN=
GITHUB_REPO_OWNER=
GITHUB_REPO_NAME=
