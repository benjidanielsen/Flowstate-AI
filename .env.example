# Core Settings
ENVIRONMENT=development

# Database
DB_HOST=db
DB_PORT=5432
DB_USER=flowstate_user
DB_PASSWORD=your_secure_password
DB_NAME=flowstate_db

# AI Services
OPENAI_API_KEY=sk-YOUR_OPENAI_KEY_HERE
OPENAI_MODEL=gpt-4.1

# AI Feedback Loop
NBA_REFRESH_MINUTES=30
NBA_PRIORITY_WEIGHTS=responsiveness:0.4,inactivity:0.35,deal_value:0.25
GITHUB_TOKEN=ghp_your_github_token_for_ai_issue_sync

# Dashboard & DMO Targets
DMO_TARGET_NEW_CONTACTS=20
DMO_TARGET_FOLLOW_UPS=30
DMO_TARGET_INVITES=10
DMO_TARGET_PRESENTATIONS=5
CALENDAR_PROVIDER=google
GOOGLE_CALENDAR_CLIENT_ID=your_google_client_id
GOOGLE_CALENDAR_CLIENT_SECRET=your_google_client_secret

# Lead Scoring & Gamification
RELATIONSHIP_SCORE_WEIGHTS=interaction_count:0.4,sentiment:0.3,recency:0.3
INTEREST_SCORE_WEIGHTS=note_sentiment:0.5,response_speed:0.3,content_engagement:0.2
GAMIFICATION_BADGE_THRESHOLDS=leads_signed_week:5,presentations_month:20,followup_streak:7

# Messaging & Automation
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=${REDIS_URL}
CELERY_RESULT_BACKEND=${REDIS_URL}
REMINDER_ESCALATION_SCHEDULE=3,7,14
REMINDER_TIMEZONE=UTC

# Observability
OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector:4317
OTEL_SERVICE_NAME=flowstate-api
EVENT_LOG_SINK=http://loki:3100

# Analytics
WAREHOUSE_URL=postgresql://analytics_user:analytics_password@warehouse:5432/flowstate_analytics
ANALYTICS_EXPORT_BUCKET=s3://flowstate-analytics
