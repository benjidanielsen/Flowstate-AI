{
    "version": "2.0.0",
    "tasks": [
        // ****************************************************************** //
        //                      CODE QUALITY & SCANNING                       //
        // ****************************************************************** //
        {
            "label": "Fix Code Style Issues",
            "type": "npm",
            "script": "format",
            "detail": "Runs the 'format' script from package.json (e.g., prettier --write .)",
            "group": "none",
            "problemMatcher": []
        },
        {
            "label": "Scan for Issues",
            "type": "npm",
            "script": "lint",
            "detail": "Runs the 'lint' script from package.json (e.g., eslint .)",
            "group": "test",
            "problemMatcher": []
        },
        // ****************************************************************** //
        //                      APPLICATION LIFECYCLE                         //
        // ****************************************************************** //
        {
            "label": "Start Flowstate-AI System",
            "dependsOn": [
                "Fix Code Style Issues",
                "Scan for Issues"
            ],
            "dependsOrder": "sequence",
            "windows": {
                "command": "powershell",
                "args": [
                    "-NoProfile",
                    "-ExecutionPolicy",
                    "Bypass",
                    "-File",
                    "${workspaceFolder}\\scripts\\windows\\START_FLOWSTATE_WINDOWS.ps1"
                ]
            },
            "linux": {
                "command": "sh",
                "args": [
                    "${workspaceFolder}/scripts/linux/START_FLOWSTATE_LINUX.sh"
                ]
            },
            "osx": {
                "command": "sh",
                "args": [
                    "${workspaceFolder}/scripts/macos/START_FLOWSTATE_MACOS.sh"
                ]
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "runOptions": {
                "runOn": "folderOpen"
            },
            "problemMatcher": []
        },
        {
            "label": "Stop Flowstate-AI System",
            "type": "process",
            "command": "echo 'Stopping...'",
            "windows": {
                "command": "powershell",
                "args": [
                    "-NoProfile",
                    "-ExecutionPolicy",
                    "Bypass",
                    "-File",
                    "${workspaceFolder}\\scripts\\windows\\STOP_FLOWSTATE_WINDOWS.ps1"
                ]
            },
            "linux": {
                "command": "sh",
                "args": [
                    "${workspaceFolder}/scripts/linux/STOP_FLOWSTATE_LINUX.sh"
                ]
            },
            "osx": {
                "command": "sh",
                "args": [
                    "${workspaceFolder}/scripts/macos/STOP_FLOWSTATE_MACOS.sh"
                ]
            },
            "group": "none",
            "problemMatcher": []
        },
        {
            "label": "Restart Flowstate-AI System",
            "dependsOn": [
                "Stop Flowstate-AI System",
                "Start Flowstate-AI System"
            ],
            "dependsOrder": "sequence",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ]
}